// schema.prisma
datasource db {
  provider = "postgresql" // เปลี่ยนจาก sqlite เป็น postgresql
  url      = env("DATABASE_URL") // ใช้ตัวแปร Environment แทนชื่อไฟล์
}

generator client {
  provider = "prisma-client-js"
}

model Booking {
  id           Int      @id @default(autoincrement())
  customerName String
  date         DateTime
  time         String
  guests       Int
  seatNumber   String   
  status       String   @default("Pending")
  createdAt    DateTime @default(now())
}